{
  "name": "order-dashboard",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "date-fns": "^2.30.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.10.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -n \"backend,frontend\" -c \"cyan,yellow\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "frontend": "react-scripts start",
    "frontend:dev": "react-scripts start",
    "import:excel": "cd backend && npm run import:excel",
    "import:excel:clear": "cd backend && npm run import:excel:clear",
    "pm2:start": "pm2 start ecosystem.config.js --only dashboard",
    "pm2:start:prod": "pm2 start ecosystem.config.js --only dashboard --env production",
    "pm2:fix": "./fix-pm2.sh",
    "pm2:stop": "pm2 stop dashboard",
    "pm2:restart": "pm2 restart dashboard",
    "pm2:delete": "pm2 delete dashboard",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs dashboard",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "deploy": "npm run build && pm2 restart dashboard",
    "deploy:full": "npm install && cd backend && npm install && cd .. && npm run build && pm2 restart dashboard --update-env"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
